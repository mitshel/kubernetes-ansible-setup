  - name: Reboot all hosts
    shell: nohup bash -c "sleep 2s && reboot" &
    async: 0
    poll: 0
    ignore_errors: true
    register: reboot

  - name: wait for servers restarts
    local_action: wait_for port=22 host="{{ inventory_hostname }}" delay=30 state=started timeout=600 connect_timeout=15
    when: reboot.changed
